@model IEnumerable<AppCore.Entities.Post>

@{
    ViewData["Title"] = "Simple Blog Posts";
}

<h2>SimpleBlog Posts</h2>

@foreach (var item in Model)
{
<main class="posts">
    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
    <section class="post">
        <p> @Html.DisplayNameFor(modelItem => item.AvgAwScore): @Html.DisplayFor(modelItem => item.AvgAwScore) (@Html.DisplayFor(modelItem => item.AwScores.Count) reviews)</p>
        <p>Written by: @Html.DisplayFor(modelItem => item.Author) | Posted: @Html.DisplayFor(modelItem => item.PostDate)</p>
        <div class="content-body">
            @Html.Raw(item.Content)
        </div>
        <p>
            @Html.ActionLink("See More...", "Post", new { permalink = item.Permalink })
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.Id) |
            @Html.DisplayFor(modelItem => item.Permalink)
        </p>
    </section>
</main>
}